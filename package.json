{
  "name": "ivycss",
  "version": "0.1.0",
  "description": "tiny (s)css framework",
  "author": "Ivan Čepička",
  "scripts": {
    "build": "npm run clean && sass --style=compressed src:dist",
    "clean": "rimraf dist",
    "format": "prettier --write .",
    "prepublishOnly": "",
    "prepare": "husky && npm run build"
  },
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": {
      "default": "./dist/all.css",
      "style": "./dist/all.css",
      "sass": "./src/all.scss"
    },
    "./themes/default": {
      "default": "./dist/themes/default.css",
      "style": "./dist/themes/default.css",
      "sass": "./src/themes/default.scss"
    },
    "./text": {
      "default": "./dist/text.css",
      "style": "./dist/text.css",
      "sass": "./src/text.scss"
    },
    "./components/button": {
      "default": "./dist/components/button.css",
      "style": "./dist/components/button.css",
      "sass": "./src/components/button.scss"
    }
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "sass-embedded": "^1.97.3"
  },
  "lint-staged": {
    "*.{json,prettierrc,css,scss,md,html}": [
      "prettier --write"
    ]
  }
}
